<ContentDialog 
    x:Class="CryptoTracker.Views.FirstRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="345"
    d:DesignWidth="550"
    PrimaryButtonText="Ok">
    
    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/CryptoTracker 400.png" Width="35" Height="35" Margin="0"/>
                <TextBlock VerticalAlignment="Center" Text="Welcome" FontSize="22" Margin="10,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>
    
    <ScrollViewer>
        <StackPanel>
            <TextBlock TextWrapping="WrapWholeWords">
                
                <Run>Thanks for installing CryptoTracker!</Run><LineBreak/>
                <LineBreak/>
                
                <Run>New in this version:</Run><LineBreak/>
                <Run Text=" - Added Ripple (XRP) support." 
                     FontWeight="ExtraLight"/><LineBreak/>
                <Run Text=" - Fixed portfolio section not scrolling." 
                     FontWeight="ExtraLight"/><LineBreak/>
                <Run Text=" - Refined UI." 
                     FontWeight="ExtraLight"/><LineBreak/>
                <Run Text=" - I'll work on fixing bugs and making the app faster, and then I'll continue to add more alt-coins." 
                     FontWeight="ExtraLight"/><LineBreak/>
                
                <LineBreak/>
                <Run>Any bug or suggestion, be sure to reach me through 
                    email, Twitter or the Windows Store (contact info on the app settings).</Run>
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
