<ContentDialog 
    x:Class="CryptoTracker.Views.FirstRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="345"
    d:DesignWidth="550"
    PrimaryButtonText="Ok">
    
    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <Image Source="/Assets/CryptoTracker 400.png" Width="35" Height="35" Margin="0"/>
                <TextBlock VerticalAlignment="Center" Text="Welcome to CryptoTracker" FontSize="22" Margin="10,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>
    
    <ScrollViewer>
        <StackPanel>
            <TextBlock TextWrapping="WrapWholeWords">
                
                <Run>New in this version &#x1F680;</Run><LineBreak/>
                
                <Run FontWeight="ExtraLight"
                     Text=" • Edit Home layout by pinning your fav coins!
                     &#x0a; • Check the subreddit for updates and feedback.
                     &#x0a; • Added logos and colors to more coins!
                     &#x0a; • Bug fixes.
                     "/> 
                <LineBreak/>
                
                <LineBreak/>
                <Run FontWeight="ExtraLight"
                     Text="Thanks for installing CryptoTracker
                     &#x0a;Ismael."/> <LineBreak/>
                
                <LineBreak/>
                <Run FontWeight="ExtraLight" FontStyle="Italic">
                    Any bug or suggestion, you can reach me through 
                    email, Reddit, Twitter or the Windows Store (contact on the settings page).
                </Run>
                
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
