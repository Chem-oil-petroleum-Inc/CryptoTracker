<Page
	x:Class="CryptoTracker.Portfolio"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:helpers ="using:CryptoTracker.Helpers"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:views="using:CryptoTracker"
	NavigationCacheMode="Disabled"
	mc:Ignorable="d">

	<Page.Resources>
		<Style x:Key="DataGrid_HeaderStyle" TargetType="ContentControl">
			<Setter Property="FontWeight" Value="SemiLight" />
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="Foreground" Value="{ThemeResource SystemChromeMediumLowColor}"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="ContentControl">
						<ContentPresenter Content="{TemplateBinding Content}"
							ContentTemplate="{TemplateBinding ContentTemplate}"
							Background="{ThemeResource SystemBaseMediumHighColor}"
							CornerRadius="0 0 0 0"
							ContentTransitions="{TemplateBinding ContentTransitions}"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center"/>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Page.Resources>

	<Grid x:Name="MainGrid" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}" Padding="5 0">
		<!-- Adapt CoinDiversification stack placement -->
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState x:Name="NarrowState">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="DiversificationPanel.Margin" Value="0 10 0 0"/>
					</VisualState.Setters>
				</VisualState>

				<VisualState x:Name="WideState">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="900" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="DiversificationPanel.(Grid.Row)" Value="0"/>
						<Setter Target="DiversificationPanel.(Grid.Column)" Value="1"/>
						<Setter Target="DiversificationPanel.Margin" Value="0"/>
						<Setter Target="PortfolioInfoGrid.ColumnDefinitions[0].Width" Value="auto"/>
						<Setter Target="PortfolioInfoGrid.ColumnDefinitions[1].Width" Value="*"/>
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<!-- 
		############################################################################################################### -->
		<Grid x:Name="PortfolioInfoGrid" Grid.Row="0" Margin="7 20 7 10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="auto"/>
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Row="0" Orientation="Horizontal">
				<ComboBox
					x:Name="CryptoComboBox" Width="90" Margin="0 0 5 0"
					PlaceholderText="Coin" Header="Crypto"/>

				<muxc:NumberBox 
					x:Name="CryptoQtyNumberBox" Header="Amount" Minimum="0"  PlaceholderText="0"
					Width="70px" Margin="0 0 5 0" AcceptsExpression="True"/>
				<muxc:NumberBox 
					x:Name="InvestedQtyNumberBox" Header="Invested" Minimum="0" PlaceholderText="0"
					Width="70px" Margin="0 0 5 0" AcceptsExpression="True"/>

				<Button
					Click="AddButton_Click" VerticalAlignment="Bottom" Style="{ThemeResource Crypto_button_style}"
					Margin="0 0 3 0" ToolTipService.ToolTip="Add">
					<SymbolIcon Symbol="Add"/>
				</Button>
				<Button 
					Click="ToggleDetails_click" VerticalAlignment="Bottom" Style="{ThemeResource Crypto_button_style}"
					Margin="0 0 3 0" ToolTipService.ToolTip="Toggle details">
					<SymbolIcon Symbol="ShowBcc"/>
				</Button>
				<Button
					Click="AddPurchaseDialog_click" VerticalAlignment="Bottom" Style="{ThemeResource Crypto_button_style}"
					Margin="0 0 3 0" ToolTipService.ToolTip="Add">
					<SymbolIcon Symbol="Add"/>
				</Button>
			</StackPanel>

			<StackPanel x:Name="DiversificationPanel" Grid.Row="1">
				<TextBlock Text="Coin diversification" Style="{ThemeResource InkToolbarFlyoutItemContentTextStyle}"/>
				<Grid x:Name="PortfolioChartGrid" Background="Transparent" BorderThickness="0"
					Height="32" VerticalAlignment="Center" CornerRadius="5" Margin="0 4 0 0">
				</Grid>
			</StackPanel>
		</Grid>



		<!-- 
		###############################################################################################################
		###############################################################################################################
		############################################################################################################### -->
		<ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1" CornerRadius="30 30 0 0">
			<controls:DataGrid x:Name="DataGridd" Margin="7" ColumnHeaderStyle="{ThemeResource DataGrid_HeaderStyle}"
				VerticalAlignment="Top" HorizontalAlignment="Stretch"
				RowBackground="Transparent"
				AutoGenerateColumns="False" HeadersVisibility="Column"
				CanUserSortColumns="False" CanUserReorderColumns="False" CanUserResizeColumns="False"
				GridLinesVisibility="Horizontal" BorderBrush="{ThemeResource SystemControlDisabledChromeHighBrush}" BorderThickness="1 0"
				HorizontalGridLinesBrush="{ThemeResource SystemControlDisabledChromeHighBrush}"
				RowDetailsVisibilityMode="Collapsed" SelectionMode="Single">
				<controls:DataGrid.Columns>
					<controls:DataGridTemplateColumn Header="Crypto" Width="*">
						<controls:DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<Grid VerticalAlignment="Center" HorizontalAlignment="Stretch" Padding="0 5">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="3*"/>
										<ColumnDefinition Width="2*"/>
									</Grid.ColumnDefinitions>

									<TextBlock VerticalAlignment="Center" HorizontalAlignment="Right">
										<Run Text="{Binding CryptoQty}"/>
										<Run Text="{Binding Crypto}"/>
									</TextBlock>

									<Image Grid.Column="1" Width="30" Margin="10 0" Source="{Binding CryptoLogo}"/>
								</Grid>
							</DataTemplate>
						</controls:DataGridTemplateColumn.CellTemplate>
					</controls:DataGridTemplateColumn>

					<controls:DataGridTemplateColumn Header="Invested" Width="*">
						<controls:DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
									<TextBlock Text="{Binding InvestedQty}"/>
									<TextBlock Text="{Binding c}"/>
								</StackPanel>
							</DataTemplate>
						</controls:DataGridTemplateColumn.CellTemplate>
					</controls:DataGridTemplateColumn>

					<controls:DataGridTemplateColumn Header="Worth" Width="*">
						<controls:DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
									<TextBlock Text="{Binding arrow}" Margin="4 0" Foreground="{Binding ProfitFG, Mode=OneWay}"/>
									<TextBlock Text="{Binding Worth}"/>
									<TextBlock Text="{Binding c}"/>
								</StackPanel>
							</DataTemplate>
						</controls:DataGridTemplateColumn.CellTemplate>
					</controls:DataGridTemplateColumn>

					<controls:DataGridTemplateColumn Header="Currently" Width="*">
						<controls:DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
									<TextBlock Text="{Binding Current}"/>
									<TextBlock Text="{Binding c}"      />
								</StackPanel>
							</DataTemplate>
						</controls:DataGridTemplateColumn.CellTemplate>
					</controls:DataGridTemplateColumn>
				</controls:DataGrid.Columns>

				<controls:DataGrid.RowStyle>
					<Style TargetType="controls:DataGridRow">
						<Setter Property="controls:DataGridRow.ContextFlyout">
							<Setter.Value>
								<MenuFlyout>
									<MenuFlyoutItem Text="See coin" Click="GoToCoinPortfolio_Click">
										<MenuFlyoutItem.Icon>
											<SymbolIcon Symbol="Find"/>
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem Text="Edit" Click="GoToCoinPortfolio_Click">
										<MenuFlyoutItem.Icon>
											<SymbolIcon Symbol="Edit"/>
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
									<MenuFlyoutItem Text="Remove" Click="RemovePortfolio_Click">
										<MenuFlyoutItem.Icon>
											<SymbolIcon Symbol="Delete"/>
										</MenuFlyoutItem.Icon>
									</MenuFlyoutItem>
								</MenuFlyout>
							</Setter.Value>
						</Setter>
					</Style>
				</controls:DataGrid.RowStyle>

				<!-- DETAILS OF EACH PURCHASE -->
				<controls:DataGrid.RowDetailsTemplate>
					<DataTemplate>
						<Grid Padding="15" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
							<Grid.RowDefinitions>
								<RowDefinition Height="25"/>
								<RowDefinition Height="25"/>
								<RowDefinition Height="25"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" MinWidth="150"/>
								<ColumnDefinition Width="*" MinWidth="170"/>
								<ColumnDefinition Width="*" MinWidth="140"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>

							<!-- First Row-->
							<Grid Grid.Row="0" Grid.Column="0" Margin="15 0 0 0" MaxWidth="150">
								<TextBlock Text="Buy price:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}">
									<Run Text="{Binding BoughtAt, Mode=OneWay}"/><Run Text="{Binding c, Mode=OneWay}"/>
								</TextBlock>
							</Grid>
							<Grid Grid.Row="0" Grid.Column="1" Margin="25 0 0 0" MaxWidth="170">
								<TextBlock Text="Currently:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}">
									<Run Text="{Binding Current, Mode=OneWay}"/><Run Text="{Binding c, Mode=OneWay}"/>
								</TextBlock>
							</Grid>
							<Grid Grid.Row="0" Grid.Column="2" Margin="25 0 0 0" MaxWidth="140">
								<TextBlock Text="Delta:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}" Foreground="{Binding ProfitFG, Mode=OneWay}" FontWeight="SemiBold">
									<Run Text="{Binding arrow, Mode=OneWay}"/><Run Text="{Binding Delta, Mode=OneWay}"/><Run Text="%"/>
								</TextBlock>
							</Grid>


							<!-- Second Row-->
							<Grid Grid.Row="1" Grid.Column="0" Margin="15 0 0 0" MaxWidth="150">
								<TextBlock Text="Cost:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}">
									<Run Text="{Binding InvestedQty, Mode=OneWay}"/><Run Text="{Binding c, Mode=OneWay}"/>
								</TextBlock>
							</Grid>
							<Grid Grid.Row="1" Grid.Column="1" Margin="25 0 0 0" MaxWidth="170">
								<TextBlock Text="Worth:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}">
									<Run Text="{Binding Worth, Mode=OneWay}"/><Run Text="{Binding c, Mode=OneWay}"/>
								</TextBlock>
							</Grid>
							<Grid Grid.Row="1" Grid.Column="2" Margin="25 0 0 0" MaxWidth="140">
								<TextBlock Text="Diff:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
								<TextBlock HorizontalAlignment="Right" Style="{ThemeResource ListViewTextBlock}" Foreground="{Binding ProfitFG, Mode=OneWay}" FontWeight="SemiBold">
									<Run
										Text="{Binding arrow, Mode=OneWay}"/><Run
										Text="{Binding Profit, Mode=OneWay}"/><Run
										Text="{Binding c, Mode=OneWay}"/>
								</TextBlock>
							</Grid>


							<!-- Third Row-->
							<Grid Grid.Row="2" Grid.Column="0" Margin="15 0 0 0" MaxWidth="150">
								<TextBlock Text="Date:" HorizontalAlignment="Left" Style="{ThemeResource ListViewTextBlock}" FontWeight="Bold"/>
							</Grid>
							<Grid Grid.Row="2" Grid.Column="1" Margin="15 0 0 0" MaxWidth="170">
								<CalendarDatePicker Date="{Binding Date, Mode=TwoWay}" Margin="0 -2"
									DateChanged="purchaseDate_changed" 
									DateFormat="{}{day.integer} {month.full} {year.full}"/>
							</Grid>


						</Grid>
					</DataTemplate>
				</controls:DataGrid.RowDetailsTemplate>
			</controls:DataGrid>
		</ScrollViewer>

		<ContentDialog
			x:Name="TestDialog"
			Grid.RowSpan="2"
			Title="New purchase"
			PrimaryButtonText="Add"
			PrimaryButtonClick="TestDialog_PrimaryButtonClick"
			CloseButtonText="Cancel"
			DefaultButton="Primary">
			<muxc:ItemsRepeater
				x:Name="TestRepeater" VerticalAlignment="Top"
				HorizontalAlignment="Center">
				
				<muxc:ItemsRepeater.ItemTemplate>
					<DataTemplate x:DataType="helpers:PurchaseClass">
						<controls:UniformGrid Columns="3" Rows="3" Margin="0 15" VerticalAlignment="Top">
							<ComboBox
								Header="Crypto"
								ItemsSource="{x:Bind Path=views:Portfolio.coinsArray}"
								Margin="0 0 5 0"
								LostFocus="DialogBtn_LostFocus"
								PlaceholderText="Coin"
								SelectedValue="{x:Bind Crypto, Mode=TwoWay}"
								Width="130"/>

							<muxc:NumberBox
								AcceptsExpression="True"
								Header="Amount"
								Minimum="0"
								PlaceholderText="0"
								LostFocus="DialogBtn_LostFocus"
								Width="130"
								Margin="0 0 5 0"
								HorizontalAlignment="Left"
								Value="{x:Bind CryptoQty, Mode=TwoWay}"/>
							<muxc:NumberBox
								AcceptsExpression="True"
								Header="Invested"
								Margin="0 0 5 0"
								Minimum="0"
								PlaceholderText="0"
								HorizontalAlignment="Left"
								LostFocus="DialogBtn_LostFocus"
								Value="{x:Bind InvestedQty, Mode=TwoWay}"
								Width="130"/>

							<DatePicker
								Grid.Row="1"
								Header="Date"
								Date="{x:Bind Date, Mode=OneWay}"
								HorizontalAlignment="Left"
								Margin="0 5 0 0"
								Grid.ColumnSpan="2"/>

							<StackPanel
								HorizontalAlignment="Stretch"
								Grid.Row="2"
								Grid.ColumnSpan="2"
								Orientation="Horizontal"
								Margin="0 15 0 0">
								<TextBlock Text="Worth: "/>
								<TextBlock>
									<Run Text=" "/>
									<Run Text="{x:Bind Worth, Mode=OneWay, FallbackValue='0'}"/><Run 
										Text="{x:Bind c, Mode=OneWay}"/>
								</TextBlock>
								<TextBlock Foreground="{x:Bind ProfitFG, Mode=OneWay}">
									<Run
										Text="{x:Bind arrow, Mode=OneWay}"/><Run Text="{x:Bind Delta, Mode=OneWay}"/><Run Text="%"/>
								</TextBlock>
							</StackPanel>
							

						</controls:UniformGrid>
					</DataTemplate>
				</muxc:ItemsRepeater.ItemTemplate>
			</muxc:ItemsRepeater>

