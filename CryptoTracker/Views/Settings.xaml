                <!-- MENTION
                /////////////////////////////////////////////////////////////////////////////////////////////////-->
                <StackPanel Orientation="Horizontal" Margin="0 10 0 5">
                    <FontIcon Glyph="&#xE90A;" Style="{ThemeResource ClassFontIcon}"/>
                    <TextBlock Text="Mention" Style="{ThemeResource ClassTitle}"/>
                </StackPanel>

                <StackPanel Margin="30 0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Data provided by" Style="{ThemeResource LabelTitle}"/>
                        <HyperlinkButton NavigateUri="https://www.cryptocompare.com/api" 
                            Content="CryptoCompare API" Margin="5 -5 0 0"
                            FontWeight="ExtraLight"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- FOOTER
                /////////////////////////////////////////////////////////////////////////////////////////////////-->
            <StackPanel Margin="0 15 0 0" Grid.Row="1" Orientation="Horizontal">
                <Image Source="/Assets/CryptoTracker 400.png" Width="80" HorizontalAlignment="Left"/>
                <StackPanel Margin="10, 0">
                    <TextBlock Text="CryptoTracker" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Made with ❤ by an engineering student." FontWeight="Light"/>
                    <TextBlock Name="VersionTextBlock" Text="Version: 3.X.X" FontWeight="Light"/>
                    <HyperlinkButton NavigateUri="https://ismaelestalayo.com/" 
                        Content    ="https://ismaelestalayo.com/" 
                        Margin="0, -6, 0, 0"
                        Foreground="{ThemeResource HyperlinkButtonForeground}"
                        FontWeight="Light"/>

                </StackPanel>
            </StackPanel>

            <ContentDialog
                x:Name="ImportDialog"
                Title="Import X purchases?"
                PrimaryButtonText="Import"
                CloseButtonText="Cancel"
                DefaultButton="Primary">

                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="{Binding ImportDialog.IsPrimaryButtonEnabled}">
                    <TextBlock Text="This will clear your current portfolio and download your backup." 
                               TextWrapping="Wrap" />
                </StackPanel>

            </ContentDialog>

        </Grid>
    </ScrollViewer>
</Page>