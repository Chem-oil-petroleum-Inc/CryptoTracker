<Page
    x:Class="GDAX.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GDAX"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
	
	<Grid >

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>


		<RelativePanel Grid.Row="0" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
			<TextBlock Text="Coinbase" Style="{ThemeResource HeaderTextBlockStyle}"
                       FontSize="42" Margin="10" Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"
                       RelativePanel.AlignLeftWithPanel="True"/>
			<!--<AutoSuggestBox PlaceholderText="Search" Width="200" Margin="10" 
							RelativePanel.AlignRightWithPanel="True" QueryIcon="Find"/>-->

			<Button FontFamily="Segoe MDL2 Assets" Content="&#xE115;" Click="SettingsButton"
					FontSize="36" Background="Transparent" BorderBrush="Transparent" Margin="10"
					Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"
					RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>

		</RelativePanel>

		<Frame Name="MainFrame" Background="Gray" Grid.Row="1">

		</Frame>



	</Grid>

</Page>
