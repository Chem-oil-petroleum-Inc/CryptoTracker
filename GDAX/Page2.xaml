<Page
    x:Class="GDAX.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="using:Telerik.UI.Xaml.Controls.Chart"
    mc:Ignorable="d"
	NavigationCacheMode="Required">

	<Page.Resources>
		<Style TargetType="Button" x:Key="HeaderUpdateButton">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="Margin" Value="20, 14"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
			<Setter Property="Content" Value="&#xE117;"/>
		</Style>

		<Style TargetType="TextBlock" x:Key="BottomTextBlockStyle">
			<Setter Property="FontWeight" Value="Light"/>
			<Setter Property="Margin" Value="10,5"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="OpticalMarginAlignment" Value="TrimSideBearings" />
		</Style>

		<Style TargetType="telerik:RadCartesianChart" x:Key="ChartStyle">
			<Setter Property="Margin" Value="10"/>
		</Style>

		<Style TargetType="Border" x:Key="ChartBorder">
			<Setter Property="Background" Value="Pink"/>
		</Style>

		<SolidColorBrush x:Key="BTC_color" Color="#FFB119"/>
		<SolidColorBrush x:Key="ETH_color" Color="#6F7CBA"/>
		<SolidColorBrush x:Key="LTC_color" Color="#B5B5B5"/>

	</Page.Resources>

	<Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Headers of the three grids -->

		<GridViewHeaderItem Grid.Column="0" Margin="0,-5">
			<StackPanel Orientation="Horizontal">
				<RelativePanel VerticalAlignment="Center" Margin="10, 10, 10, 0">
					<Ellipse Fill="#FFB119" Width="32" Height="32"/>
					<Path Fill="White" Data="M21.78 15.37c.51-.61.83-1.4.83-2.26 0-2.74-1.6-4.38-4.24-4.38V5.45c0-.12-.1-.22-.22-.22h-1.27c-.11 0-.2.1-.2.21v3.3h-1.7V5.44c0-.12-.1-.22-.22-.22H13.5c-.12 0-.2.1-.21.21v3.3H9.67c-.12 0-.21.09-.21.21v1.31c0 .12.1.22.21.22h.21c.94 0 1.7.79 1.7 1.75v7c0 .92-.68 1.67-1.55 1.75a.21.21 0 0 0-.18.16l-.33 1.32c-.01.06 0 .13.04.19.04.05.1.08.17.08h3.55v3.3c0 .1.1.2.2.2h1.28c.12 0 .21-.1.21-.22v-3.28h1.7v3.3c0 .1.1.2.21.2h1.27c.12 0 .22-.1.22-.22v-3.28h.85c2.65 0 4.24-1.64 4.24-4.37 0-1.28-.68-2.39-1.68-3zm-6.8-4.01h2.54c.94 0 1.7.78 1.7 1.75 0 .96-.76 1.75-1.7 1.75h-2.55v-3.5zm3.39 8.75h-3.4v-3.5h3.4c.93 0 1.7.78 1.7 1.75 0 .96-.77 1.75-1.7 1.75z" />
				</RelativePanel>
				<TextBlock Text="Bitcoin" Margin="10,0,0,0" Style="{ThemeResource SubheaderTextBlockStyle}"/>

			</StackPanel>
		</GridViewHeaderItem>
		<GridViewHeaderItem Grid.Column="1" Margin="0, -5">
			<StackPanel Orientation="Horizontal">
				<RelativePanel VerticalAlignment="Center" Margin="10, 10, 10, 0">
					<Ellipse Fill="#6F7CBA" Width="32" Height="32"/>
					<Path Fill="White" Data="M10.13 17.76c-.1-.15-.06-.2.09-.12l5.49 3.09c.15.08.4.08.56 0l5.58-3.08c.16-.08.2-.03.1.11L16.2 25.9c-.1.15-.28.15-.38 0l-5.7-8.13zm.04-2.03a.3.3 0 0 1-.13-.42l5.74-9.2c.1-.15.25-.15.34 0l5.77 9.19c.1.14.05.33-.12.41l-5.5 2.78a.73.73 0 0 1-.6 0l-5.5-2.76z" />
				</RelativePanel>
				<TextBlock Text="Ethereum" Margin="10,0,0,0" Style="{ThemeResource SubheaderTextBlockStyle}"/>
			</StackPanel>
		</GridViewHeaderItem>
		<GridViewHeaderItem Grid.Column="2" Margin="0,-5">
			<StackPanel Orientation="Horizontal">
				<RelativePanel VerticalAlignment="Center" Margin="10, 10, 10, 0">
					<Ellipse Fill="#B5B5B5" Width="32" Height="32"/>
					<Path Fill="White" Margin="-3" Data="M12.29 28.04l1.29-5.52-1.58.67.63-2.85 1.64-.68L16.52 10h5.23l-1.52 7.14 2.09-.74-.58 2.7-2.05.8-.9 4.34h8.1l-.99 3.8z" />
				</RelativePanel>
				<TextBlock Text="Litecoin" Margin="10,0,0,0" Style="{ThemeResource SubheaderTextBlockStyle}"/>
			</StackPanel>
		</GridViewHeaderItem>

		<Button Grid.Column="0" Style="{StaticResource HeaderUpdateButton}" Click="BTC_Update_click"/>
		<Button Grid.Column="1" Style="{StaticResource HeaderUpdateButton}" Click="ETH_Update_click"/>
		<Button Grid.Column="2" Style="{StaticResource HeaderUpdateButton}" Click="LTC_Update_click"/>

		<!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		<Grid Grid.Column="0" Margin="10,50,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<telerik:RadCartesianChart x:Name="BTC_Chart" Margin="15" Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}">
				
				<telerik:RadCartesianChart.Behaviors>
					<telerik:ChartTrackBallBehavior />
				</telerik:RadCartesianChart.Behaviors>

				<telerik:RadCartesianChart.Grid>
					<telerik:CartesianChartGrid MajorLinesVisibility="Y"/>
				</telerik:RadCartesianChart.Grid>

				<telerik:RadCartesianChart.HorizontalAxis>
					<telerik:DateTimeCategoricalAxis  
						LabelFitMode="Rotate" 
						LabelInterval="20" 
						FontWeight="Light" 
						FontFamily="Segoe UI"
						Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.HorizontalAxis>

				<telerik:RadCartesianChart.VerticalAxis>
					<telerik:LinearAxis Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.VerticalAxis>

				<telerik:RadCartesianChart.Series>
					<telerik:LineSeries Stroke="{StaticResource BTC_color}" StrokeThickness="1"/>
					<telerik:LineSeries Stroke="Black" StrokeThickness="1"/>
				</telerik:RadCartesianChart.Series>
			</telerik:RadCartesianChart>

			<TextBlock Name="BTC_curr" Text="Current value:"  Grid.Row="1" Style="{StaticResource BottomTextBlockStyle}"/>
			<TextBlock Name="BTC_diff" Text="From yesterday:" Grid.Row="2" Style="{StaticResource BottomTextBlockStyle}" Margin="10,5,10,30"/>
		</Grid>

		<!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		<Grid Grid.Column="1" Margin="10,50,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			
			<telerik:RadCartesianChart x:Name="ETH_Chart" Margin="15" Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}">

				<telerik:RadCartesianChart.Annotations>
					<telerik:CartesianGridLineAnnotation Axis="{Binding ElementName=ETH_Chart, Path=VerticalAxis}" 
														 Value="250" 
														 Stroke="Black" StrokeThickness="2"/>
				</telerik:RadCartesianChart.Annotations>

				<telerik:RadCartesianChart.Behaviors>
					<telerik:ChartTrackBallBehavior/>
				</telerik:RadCartesianChart.Behaviors>

				<telerik:RadCartesianChart.Grid>
					<telerik:CartesianChartGrid MajorLinesVisibility="Y"/>
				</telerik:RadCartesianChart.Grid>

				<telerik:RadCartesianChart.HorizontalAxis>
					<telerik:DateTimeCategoricalAxis  
						LabelFitMode="Rotate" 
						LabelInterval="20" 
						FontWeight="Light" 
						FontFamily="Segoe UI"
						Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.HorizontalAxis>

				<telerik:RadCartesianChart.VerticalAxis>
					<telerik:LinearAxis Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.VerticalAxis>

				<telerik:RadCartesianChart.Series>
					<telerik:LineSeries Stroke="{StaticResource ETH_color}" StrokeThickness="1"/>
				</telerik:RadCartesianChart.Series>
			</telerik:RadCartesianChart>

			<TextBlock Name="ETH_curr" Text="Current value:"  Grid.Row="1" Style="{StaticResource BottomTextBlockStyle}"/>
			<TextBlock Name="ETH_diff" Text="From yesterday:" Grid.Row="2" Style="{StaticResource BottomTextBlockStyle}" Margin="10,5,10,30"/>
		</Grid>


		<!-- ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// -->
		<Grid Grid.Column="2" Margin="10,50,10,10">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="auto"/>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>

			<telerik:RadCartesianChart x:Name="LTC_Chart" Margin="15" Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}">

				<telerik:RadCartesianChart.Annotations>
					<telerik:CartesianGridLineAnnotation Axis="{Binding ElementName=LTC_Chart, Path=VerticalAxis}" 
														 Value="40" 
														 Stroke="Pink" StrokeThickness="2"/>
				</telerik:RadCartesianChart.Annotations>

				<telerik:RadCartesianChart.Behaviors>
					<telerik:ChartTrackBallBehavior/>
				</telerik:RadCartesianChart.Behaviors>

				<telerik:RadCartesianChart.Grid>
					<telerik:CartesianChartGrid MajorLinesVisibility="Y"/>
				</telerik:RadCartesianChart.Grid>

				<telerik:RadCartesianChart.HorizontalAxis>
					<telerik:DateTimeCategoricalAxis  
						LabelFitMode="Rotate" 
						LabelInterval="20" 
						FontWeight="Light" 
						FontFamily="Segoe UI"
						Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.HorizontalAxis>

				<telerik:RadCartesianChart.VerticalAxis>
					<telerik:LinearAxis Foreground="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
				</telerik:RadCartesianChart.VerticalAxis>

				<telerik:RadCartesianChart.Series>
					<telerik:LineSeries Stroke="{StaticResource LTC_color}" StrokeThickness="1"/>
				</telerik:RadCartesianChart.Series>
			</telerik:RadCartesianChart>

			<TextBlock Name="LTC_curr" Text="Current value:"  Grid.Row="1" Style="{StaticResource BottomTextBlockStyle}"/>
			<TextBlock Name="LTC_diff" Text="From yesterday:" Grid.Row="2" Style="{StaticResource BottomTextBlockStyle}" Margin="10,5,10,30"/>
		</Grid>




	</Grid>
</Page>
