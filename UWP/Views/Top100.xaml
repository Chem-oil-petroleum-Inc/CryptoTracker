        <controls:DataGrid
            x:Name="DataGrid"
            AutoGenerateColumns="False"
            ColumnHeaderStyle="{ThemeResource DataGrid_HeaderStyle}"
            Grid.Row="3" Grid.RowSpan="1"
            SelectionMode="Single" SelectionChanged="DataGrid_SelectionChanged"
            ItemsSource="{x:Bind vm.CoinMarket}"
            MaxWidth="1000">

            <controls:DataGrid.Resources>
                <Style TargetType="Grid">
                    <Setter Property="Background" Value="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"/>
                    <Setter Property="Margin" Value="0 2"/>
                    <Setter Property="VerticalAlignment" Value="Stretch"/>
                </Style>
                <Style TargetType="StackPanel">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </controls:DataGrid.Resources>
            
            

            <controls:DataGrid.Columns>
                <controls:DataGridTemplateColumn Header="Rank" Width="200">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid Padding="15 2 0 2" Margin="3 2 0 2">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Padding="0 5">
                                    <Button
                                        Content="&#xEB51;"
                                        Click="Fav_click"
                                        FontFamily="{StaticResource FluentIconFont}"
                                        Background="Transparent"/>
                                    <Image Width="45" Margin="10 0" Source="{x:Bind image}"/>
                                    <StackPanel>
                                        <TextBlock Text="{x:Bind name}" FontWeight="Bold"/>
                                        <StackPanel Orientation="Horizontal"  Opacity="0.75">
                                            <StackPanel Background="#60808080" CornerRadius="3" Height="16" Width="16">
                                                <TextBlock Text="{x:Bind market_cap_rank}" FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="{x:Bind symbol,
                                                Converter={StaticResource UpperCase}}" Margin="3 0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="Mkt. cap." Width="*">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <StackPanel>
                                    <TextBlock
                                        Text="{x:Bind market_cap, Converter={StaticResource NumberUnit}}"
                                        FontWeight="Bold"/>
                                    <TextBlock
                                        Text="{x:Bind market_cap_change_percentage_24h,
                                            Converter={StaticResource Percentage}}"
                                        FontSize="12" FontWeight="Bold"
                                        Foreground="{x:Bind market_cap_change_24h,
                                            Converter={StaticResource NumberForeground}}">
                                        <Run Text="%"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="Vol. 24h" Width="*">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <StackPanel>
                                    <TextBlock
                                        Text="{x:Bind total_volume, Converter={StaticResource NumberUnit}}"
                                        FontSize="18"
                                        FontWeight="SemiBold"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="Price" Width="*">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <TextBlock
                                    Text="{x:Bind current_price, Converter={StaticResource NumberRounder}}"
                                    FontSize="18" FontWeight="SemiBold"/>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="24h" Width="100">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <userControls:DiffTextBlock
                                    Diff="{x:Bind price_change_percentage_24h_in_currency}"/>
                                <TextBlock Visibility="Collapsed"
                                    Text="{x:Bind price_change_percentage_24h_in_currency,
                                        Converter={StaticResource Percentage}}" FontWeight="SemiBold"
                                    Foreground="{x:Bind price_change_percentage_24h_in_currency,
                                        Converter={StaticResource NumberForeground}}"/>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="7d" Width="100">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <userControls:DiffTextBlock
                                    Diff="{x:Bind price_change_percentage_7d_in_currency}"/>
                                <TextBlock Visibility="Collapsed"
                                    Text="{x:Bind price_change_percentage_7d_in_currency,
                                        Converter={StaticResource Percentage}}" FontWeight="SemiBold"
                                    Foreground="{x:Bind price_change_percentage_7d_in_currency,
                                        Converter={StaticResource NumberForeground}}"/>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTemplateColumn Header="30d" Width="100" x:Name="DataGridColumn30d">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate x:DataType="services:CoinMarket">
                            <Grid>
                                <userControls:DiffTextBlock
                                    Diff="{x:Bind price_change_percentage_7d_in_currency}"/>
                                <TextBlock Visibility="Collapsed"
                                    Text="{x:Bind price_change_percentage_30d_in_currency,
                                        Converter={StaticResource Percentage}}" FontWeight="SemiBold"
                                    Foreground="{x:Bind price_change_percentage_30d_in_currency,
                                        Converter={StaticResource NumberForeground}}"/>
                            </Grid>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <controls:DataGridTextColumn
                    Header="PRICEE" Binding="{Binding current_price}" Tag="PRICEE" Visibility="{x:Bind vm.Vis, Mode=OneWay}"/>

            </controls:DataGrid.Columns>
            
        </controls:DataGrid>

        <!-- 
        ###########################################################################################
        # Top 100 List View # -->
            <ListView x:Name="top100ListView"
                Grid.Row="4"
                IsItemClickEnabled="True"
                ItemClick="ListView_Click"
                ItemsSource="{x:Bind vm.Top100cards}"
                MaxWidth="600" Visibility="Visible"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Top100card">
                        <Grid x:Name="listView_Element"
                            Height="65"
                            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" 
                            Margin="0 3"
                            MaxWidth="600"
                            CornerRadius="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock 
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Opacity="0.5"
                                VerticalAlignment="Center" 
                                d:Text="#1">
                                <Run Text="#"/><!--
                                --><Run Text="{x:Bind CoinInfo.Rank}"/>
                            </TextBlock>

                            <Button
                                d:Content="&#xEB51;"
                                Background="Transparent"
                                Click="Pin_click"
                                Content="{x:Bind CoinInfo.FavIcon}"
                                FontFamily="{StaticResource FluentIconFont}"
                                Grid.Column="1"
                                VerticalAlignment="Center"/>

                            <Image 
                                Grid.Column="2" 
                                Source="{x:Bind CoinInfo.ImageUrl}" 
                                Width="45"
                                d:Source="/Assets/Icons/iconNULL.png"/>
                            
                            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10 5" VerticalAlignment="Center">
                                <TextBlock
                                    d:Text="COIN"
                                    Height="30"
                                    FontSize="20" FontWeight="SemiBold"
                                    Text="{x:Bind CoinInfo.Name}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        FontWeight="SemiBold"
                                        FontSize="16"
										Opacity="0.7"
                                        HorizontalAlignment="Right">
                                        <Run Text="{x:Bind Raw.PRICE}"/><!--
                                        --><Run Text="{x:Bind CoinInfo.CurrencySymbol}"/>
                                    </TextBlock>

                                    <userControls:DiffTextBlock
                                        Diff="{x:Bind Raw.CHANGEPCT24HOUR}"
                                        DiffFg="{x:Bind CoinInfo.ChangeFG}"
                                        VerticalAlignment="Bottom"
                                        Margin="0 2"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="4" VerticalAlignment="Center" Margin="10 0">
                                <TextBlock FontWeight="Bold" HorizontalAlignment="Right" FontSize="15">
                                    <Run Text="Cap:"/>
                                    <Run Text="{x:Bind CoinInfo.MarketCap}"/><!--
                                    --><Run Text="{x:Bind CoinInfo.CurrencySymbol}"/>
                                </TextBlock>
                                <TextBlock FontWeight="Light" HorizontalAlignment="Right" Opacity="0.7" FontSize="15">
                                    <Run Text="Vol:"/>
                                    <Run Text="{x:Bind CoinInfo.Volume}"/><!--
                                    --><Run Text="{x:Bind CoinInfo.CurrencySymbol}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />

                    </Style>
                </ListView.ItemContainerStyle>

                <!-- For previsualization purposes -->
                <d:Rectangle/>
            </ListView>


    </Grid>
</Page>
