                        </TextBlock>

                        --><!-- COLUMN 3 --><!--
                        <TextBlock Grid.Column="3" Grid.Row="1"
                            Foreground="{x:Bind price_change_percentage_7d_in_currency,
                                Converter={StaticResource NumberForeground}}"
